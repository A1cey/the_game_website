{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "include": ["src/*"],
    "ignoreUnknown": false,
    "ignore": ["src/components/ui/*"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "formatWithErrors": true,
    "lineWidth": 120
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useExplicitType": "off"
      },
      "style": {
        "useConst": "error",
        "useBlockStatements": "error",
        "noParameterAssign": "error",
        "noVar": "error",
        "noUselessElse": "error",
        "recommended": true,
        "useForOf": "info",
        "useNamingConvention": "off",
        "useSelfClosingElements": "warn"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "complexity": {
        "useLiteralKeys": "off"
      }
    }
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": false
    },
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "indentWidth": 2,
      "jsxQuoteStyle": "double",
      "trailingCommas": "all",
      "arrowParentheses": "asNeeded",
      "semicolons": "always",
      "quoteProperties": "asNeeded"
    },
    "linter": {
      "enabled": true
    }
  }
}
